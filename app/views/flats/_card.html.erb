
<div class="col-xs-6 col-sm-4 col-md-3">
  <div class="card">
    <div class="card-picture" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= flat.photo %>)">
    </div>
    <div class="card-description">
      <h4><%= flat.name %></h4>
      <p><%= flat.description %></p>
      <div class="card-description-numbers">
        <ul class="list-inline">
          <li><i class="fas fa-users"></i><%= flat.number_of_guests %></li>
          <li><i class="fas fa-dollar-sign"></i><%= flat.price_per_night %></li>
        </ul>
      </div>
    </div>
    <div class="card-options">
      <ul>
        <li><%= link_to "More Info", flat_path(flat), style: "color: blue;"%></li>
        <li><%= link_to "Edit", edit_flat_path(flat), style: "color: orange;" %></li>
        <li><%= link_to "Remove", flat_path(flat), method: "delete", style: "color: red;" %></li>
      </ul>
    </div>
  </div>
</div>


